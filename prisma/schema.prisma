generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  username      String?    @unique
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  address       String?
  dhsudAccredNo String?
  facebook      String?
  instagram     String?
  licenseNo     String?
  phone         String?
  role          String?
  telegram      String?
  twitter       String?
  viber         String?
  whatsapp      String?
  youtube       String?
  accounts      Account[]
  blogs         BlogPost[]
  listings      Listing[]
  sessions      Session[]
  sales         Sale[]
  notes         Note[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Listing {
  id                 String         @id @default(cuid())
  userId             String
  title              String
  description        String
  price              Int
  address            String
  city               String
  state              String
  country            String
  bedrooms           Int
  bathrooms          Int
  area               Int            @default(0)
  status             String         @default("For Rent")
  type               String         @default("House")
  published          Boolean        @default(false)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  developer          String?
  featured           Boolean        @default(false)
  floorArea          Int?
  indoorFeatures     String[]       @default([])
  landmarks          String[]       @default([])
  lotArea            Int?
  outdoorFeatures    String[]       @default([])
  owner              String?
  parking            Int            @default(0)
  slug               String         @unique
  featuredPreselling Boolean        @default(false)
  commercialSubtype  String?
  industrySubtype    String?
  seoDescription     String?
  seoKeywords        String[]       @default([])
  seoTitle           String?
  user               User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  images             ListingImage[]
  inquiries          Inquiry[]
  sales              Sale[]
}

model ListingImage {
  id        String  @id @default(cuid())
  listingId String
  url       String
  sortOrder Int     @default(0)
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}

model BlogPost {
  id          String      @id @default(cuid())
  userId      String
  title       String
  description String
  coverPath   String?
  published   Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  featured    Boolean     @default(false)
  author      String?
  displayDate String?
  category    String?     @default("Featured Projects")
  media       BlogMedia[]
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BlogMedia {
  id          String   @id @default(cuid())
  blogId      String
  path        String
  type        String
  sortOrder   Int      @default(0)
  published   Boolean  @default(true)
  description String?
  subtitle    String?
  title       String?
  blog        BlogPost @relation(fields: [blogId], references: [id], onDelete: Cascade)
}

model Inquiry {
  id        String   @id @default(cuid())
  listingId String?
  name      String
  email     String
  phone     String?
  message   String
  status    String?  @default("Pending")
  subject   String?
  recipientEmail String?
  type      String?  @default("Inquiry") // Inquiry, Tour
  tourDate  String?
  tourTime  String?
  transcript Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listing   Listing? @relation(fields: [listingId], references: [id], onDelete: SetNull)
}

model Sale {
  id            String   @id @default(cuid())
  userId        String
  listingId     String?
  clientName      String
  clientAddress   String?
  clientEmail     String?
  clientMessenger String?
  clientPhone     String?
  amount          Float
  status          String    @default("In Progress") // In Progress, Closed, Cancelled
  salesCategory   String?   @default("Sale") // Rental, Sale
  saleDate        DateTime  @default(now())
  rentalStartDate DateTime?
  rentalDueDate   DateTime?
  notes           String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  listing       Listing? @relation(fields: [listingId], references: [id], onDelete: SetNull)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Note {
  id        String   @id @default(cuid())
  userId    String?
  content   String
  category  String?  @default("General")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatHistory {
  id        Int      @id @default(autoincrement())
  sessionId String   @map("session_id")
  message   Json
  createdAt DateTime @default(now()) @map("created_at")

  @@map("chat_history")
}
